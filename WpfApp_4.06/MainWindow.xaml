<Window x:Class="WpfApp_4._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_4._06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ProcessDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="560"/>
        <TextBox x:Name="IntervalTextBox" HorizontalAlignment="Left" Height="23" Margin="10,230,0,0" VerticalAlignment="Top" Width="120" Text=""/>
        <Label Content="Update Interval (ms):" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top"/>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="140,230,0,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Content="Stop" HorizontalAlignment="Left" Margin="220,230,0,0" VerticalAlignment="Top" Width="75" Click="StopButton_Click" IsEnabled="False"/>
    </Grid>
</Window>
